    <TextView
        android:id="@+id/song_title"
        android:maxLength="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:text="Song Title"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/song_artist"
        android:layout_width="wrap_content"
        android:maxLength="20"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:text="By Artist"
        android:textColor="#d4b300"
        android:textSize="20dp" />


    <ImageView
        android:id="@+id/songDP"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/record_img" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_baseline_skip_previous_24"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/playmusic"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_baseline_play_arrow_24"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>



        <ImageView
            android:id="@+id/nextsong"
            android:layout_width="70dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_baseline_skip_next_24"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/pausemusic"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/pause"
            android:layout_marginStart="-160dp"
            android:layout_marginTop="10dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="516dp">


        <TextView
            android:layout_width="315dp"
            android:layout_height="13dp"
            android:background="@drawable/bar"/>

        <SeekBar

            android:id="@+id/seekBar"
            android:layout_width="330dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="-16dp"
            android:layout_height="wrap_content"
            android:progress="0" />


        <SeekBar


            android:id="@+id/seekBar2"
            android:layout_width="330dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:progress="0" />




    </LinearLayout>


    <TextView
        android:id="@+id/currDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="530dp"
        android:text="0:00"
        android:textColor="#d4b300"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="530dp"
        android:text="0:00"
        android:textColor="#d4b300"
        android:textSize="20dp" />



    <LinearLayout
        android:id="@+id/favdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="590dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/likedSONGS"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/heart"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/ic_baseline_arrow_downward_24" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/ic_baseline_delete_forever_24" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/ic_baseline_message_24" />


        <ImageView
            android:id="@+id/LaterSONG"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/ic_baseline_watch_later_24" />



    </LinearLayout>



</RelativeLayout>