<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Mysong">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:text="Song Title"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />


    </LinearLayout>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="By Artist"
        android:textColor="#d4b300"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/person_c"/>

        <TextView
            android:id="@+id/cmntout"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/gradient"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="What an amazing song"
            android:textColor="@color/white"
            android:textColorHint="#DCB439"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>







    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/cmnt"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/gradient"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:text="Post a Comment"
            android:textColor="@color/white"
            android:textColorHint="#DCB439"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_play_circle_filled_24"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/play2" />



    </LinearLayout>






</RelativeLayout>